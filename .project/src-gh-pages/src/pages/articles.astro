---
import Layout from '../layouts/Layout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { formatDate } from '@/utils/dateFormatter';

const allArticles = await getCollection('articles');
const articles = allArticles.filter((article: CollectionEntry<'articles'>) => !article.data.draft);
---

<Layout 
  title="Articles - dotagents"
  description="Explore our collection of articles about AI agents, development team management, and building better software with AI-powered teammates."
>
  <div class="content">
    <h1>Articles</h1>
    <ul>
      {articles.map((article: CollectionEntry<'articles'>) => (
        <li>
          <a href={`${import.meta.env.BASE_URL}articles/${article.slug}/`}>
            <h3>{article.data.title}</h3>
            <p>{article.data.description}</p>
            <p class="publish-date">{formatDate(article.data.publishDate)}</p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>


<style>
  .content {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  h1 {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
    color: var(--primary-color);
  }
  ul {
    list-style: none;
    padding: 0;
  }
  li {
    margin-bottom: 1rem;
  }
  a {
    text-decoration: none;
    color: var(--text-primary);
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    transition: border-color 0.2s ease, background-color 0.2s ease;
  }
  a:hover {
    background-color: var(--border-color);
    border-color: var(--primary-color);
  }
  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: var(--primary-color);
  }
  p {
    color: var(--text-secondary);
    margin: 0;
  }
  .publish-date {
    text-align: right;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }
</style>
