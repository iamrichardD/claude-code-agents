---
import Layout from '../layouts/Layout.astro';

import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const articles = allArticles.filter(article => !article.data.draft);
---

<Layout title="Articles - dotagents">
  <div class="content">
    <h1>Articles</h1>
    <ul>
      {articles.map(article => (
        <li>
          <a href={`${import.meta.env.BASE_URL}articles/${article.slug}/`}>
            <h3>{article.data.title}</h3>
            <p>{article.data.description}</p>
            <p class="publish-date" data-publish-date={article.data.publishDate}>{article.data.publishDate}</p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dateElements = document.querySelectorAll('.publish-date[data-publish-date]');
    dateElements.forEach(element => {
      const rawDate = element.getAttribute('data-publish-date');
      const date = new Date(rawDate);
      const formattedDate = new Intl.DateTimeFormat(navigator.language, {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      }).format(date);
      element.textContent = formattedDate;
    });
  });
</script>

<style>
  .content {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }
  h1 {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
    color: var(--primary-color);
  }
  ul {
    list-style: none;
    padding: 0;
  }
  li {
    margin-bottom: 1rem;
  }
  a {
    text-decoration: none;
    color: var(--text-primary);
    display: block;
    padding: 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    transition: border-color 0.2s ease, background-color 0.2s ease;
  }
  a:hover {
    background-color: var(--border-color);
    border-color: var(--primary-color);
  }
  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
    color: var(--primary-color);
  }
  p {
    color: var(--text-secondary);
    margin: 0;
  }
  .publish-date {
    text-align: right;
    font-size: 0.9rem;
    color: var(--text-secondary);
  }
</style>
